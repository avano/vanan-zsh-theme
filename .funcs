path() {
        ARG=${1:-.}
        realpath ${ARG} | tr -d '\n' | xclip -selection c
}
copy() {
        ARG=${1:-.}
        cat ${ARG} | xclip -selection c
}
rebase() {
        CURRENT=$(git rev-parse --abbrev-ref HEAD)
        git checkout $1 || { echo 'Branch checkout failed' ; exit 1 }
        git pull --rebase || { echo 'Pull failed' ; exit 2; }
        git checkout ${CURRENT} || { echo 'Branch checkout failed' ; exit 3; }
        git rebase $1 || { echo 'Rebase failed' ; exit 4; }
}

